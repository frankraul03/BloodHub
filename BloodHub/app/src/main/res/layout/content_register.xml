<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.rp.bloodhub.RegisterActivity"
        tools:showIn="@layout/activity_register">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Name"
                android:drawableLeft="@mipmap/user"
                />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Email"
                android:drawableLeft="@mipmap/email_icon"
                />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Username"
                android:drawableLeft="@mipmap/user"
                />

            <EditText
                android:id="@+id/put_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="choose password"
                android:padding="10dp"
                android:drawableLeft="@mipmap/password"
                />

            <EditText
                android:id="@+id/con_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="confirm password"
                android:drawableLeft="@mipmap/password"
                android:padding="10dp"
                />

            <Button
                android:id="@+id/reg_user"
                android:text="@string/register"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#ffeedd"

                />


        </LinearLayout>


</LinearLayout>


