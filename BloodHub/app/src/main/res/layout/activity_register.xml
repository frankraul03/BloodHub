<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rp.bloodhub.RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Email"
        android:textColorHint="#bbbbbb"
        android:drawableLeft="@mipmap/email_icon"/>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="username"
            android:textColorHint="#bbbbbb"
            android:drawableLeft="@mipmap/user"/>

        <EditText
            android:id="@+id/put_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="choose password"
            android:padding="10dp"
            android:drawableLeft="@mipmap/password"
            />
        <EditText
            android:id="@+id/con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="confirm password"
            android:drawableLeft="@mipmap/password"
            android:padding="10dp"
            />
        <Button
            android:id="@+id/reg_user"
            android:text="@string/register"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:onClick="take_to_my_location"
            android:background="#0000ff"/>
    </LinearLayout>

</RelativeLayout>


