<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:orientation="vertical"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="10dp"        android:id="@+id/linear_lay"        android:layout_centerInParent="true"        android:layout_alignParentStart="true">        <EditText            android:id="@+id/user_name"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:padding="10dp"            android:hint="Enter your username"            android:drawableLeft="@mipmap/user"            />        <EditText            android:id="@+id/put_password"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:inputType="textPassword"            android:hint="Enter your password"            android:padding="10dp"            android:drawableLeft="@mipmap/password"            />        <Button            android:id="@+id/login_user"            android:text="@string/login"            android:layout_width="wrap_content"            android:padding="20dp"            android:textAlignment="center"            android:layout_height="match_parent"            android:layout_gravity="center"            android:onClick="login"            android:background="#ffeedd"            />    </LinearLayout>    <TextView        android:layout_marginTop="20dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/new_user_register"        android:id="@+id/new_reg"        android:layout_below="@+id/linear_lay"        android:gravity="center"        android:clickable="true"/>        <!--        android:onClick="reg_text_onclick"        --></RelativeLayout>